{
  "prompts": {
    "bb_light_chart": {
      "description": "Render chart with Bollinger Bands light (±2σ).",
      "input": {
        "pair": "btc_jpy",
        "type": "1day",
        "limit": 90
      },
      "messages": [
        {
          "role": "assistant",
          "content": [
            {
              "type": "tool_code",
              "tool_name": "render_chart_svg",
              "tool_input": {
                "pair": "{{pair}}",
                "type": "{{type}}",
                "limit": "{{limit}}",
                "withBB": true,
                "bbMode": "light",
                "withSMA": []
              }
            }
          ]
        }
      ]
    },
    "bb_full_chart": {
